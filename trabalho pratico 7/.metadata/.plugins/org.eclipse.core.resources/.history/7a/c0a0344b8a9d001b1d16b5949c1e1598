package principal;

import java.util.HashSet;
import java.util.InputMismatchException;
import java.util.Scanner;
import java.util.Set;

import componentes.Produto;

public class Main {


	public static void main(String [] args) {

		Scanner sc = new Scanner (System.in);

		int tam=0;
		/*cria  o conjunto set para armazenar a serie de nomes e não permite elementos repetidos*/
		Set <String> serieNomes = new  HashSet<>();

		/*trata a excessão que pode ser gerada se o usuário não digitar um inteiro*/
		try {
			System.out.println("Quantos nomes deseja digitar:");
			tam = sc.nextInt();
		}catch( InputMismatchException e) {
			System.out.println("opção inválida.");
		}

		String nome;

		/*adiciona nomes na serie de nomes*/
		for(int i=0; i<tam; i++) {

			System.out.println("Digite um nome:");
			nome=sc.next();
			serieNomes.add(nome);
		}

		/*imprime a serie de nomes lidos*/
		System.out.println(serieNomes);


		System.out.println("Digite o nome que deseja remover da serie:");
		nome=sc.next();

		/*testa se o nome está na serie de nomes para remover, se não exibe a mensagem de erro*/
		if(serieNomes.contains(nome)) {
			serieNomes.remove(nome);
		}else {
			System.out.println("Mensagem de erro: nome não está na lista");
		}


		System.out.println(serieNomes);

		/*verifica se determinado nome já foi armazenado*/

		System.out.println("Qual nome vc deseja verificar se está na lista:");
		nome=sc.next();

		if (serieNomes.contains(nome)) {
			System.out.println("Nome na lista.");
		}else {
			System.out.println("Nome não está na lista");
		}


		/*verifica se o usuário deseja apagar os nomes da lista*/

		System.out.println("Deseja apagar a lista: 1 -sim / não");
		int op=sc.nextInt();

		/*apaga todos os nomes*/
		if(op==1) {
			serieNomes.clear();
		}


		System.out.println("------------------------------------");

		Set <Produto> serieProdutos = new  HashSet<>();

		Produto produtoAux = new Produto();

		/*trata a excessão que pode ser gerada se o usuário não digitar um inteiro*/
		try {
			System.out.println("Quantos produtos deseja cadrastrar:");
			tam = sc.nextInt();
		}catch( InputMismatchException e) {
			System.out.println("opção inválida.");
		}
		
		for(int i=0; i<tam; i++) {
			System.out.println("Digite o codigo de barras do produto:");
			produtoAux.setCodidoBarra(sc.next());
			System.out.println("Digite o nome do produto:");
			produtoAux.setNome(sc.next());
			System.out.println("Digite o preço do produto:");
			produtoAux.setPreco(sc.nextDouble());	
			serieProdutos.add(produtoAux);
			
			if(serieProdutos.contains(produtoAux)) {
				System.out.println("Produto já está na lista");
			}
		}
		
		sc.close();
	}
}
