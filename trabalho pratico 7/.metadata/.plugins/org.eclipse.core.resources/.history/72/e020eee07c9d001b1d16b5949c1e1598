package principal;

import java.util.HashSet;
import java.util.InputMismatchException;
import java.util.Scanner;
import java.util.Set;

public class Main {

	
	public static void main(String [] args) {
		
		Scanner sc = new Scanner (System.in);
		
		int tam=0;
		/*cria  o conjunto set para armazenar a serie de nomes e não permite elementos repetidos*/
		Set <String> serieNomes = new  HashSet<>();
		
		/*trata a excessão que pode ser gerada se o usuário não digitar um inteiro*/
		try {
			System.out.println("Quantos nomes deseja digitar:");
			tam = sc.nextInt();
		}catch( InputMismatchException e) {
			System.out.println("opção inválida.");
		}
		
		String nome;
		
		/*adiciona nomes na serie de nomes*/
		for(int i=0; i<tam; i++) {
			
			System.out.println("Digite um nome:");
			nome=sc.next();
			serieNomes.add(nome);
		}
		
		/*imprime a serie de nomes lidos*/
        System.out.println(serieNomes);
		
		
		System.out.println("Digite o nome que deseja remover da serie");
		nome=sc.next();
		serieNomes.remove(nome);
		
		
		 System.out.println(serieNomes);
		
		
		Set <String > nomes = new HashSet<>();
		
		sc.close();
	}
}
